# Docker Environment Variables
# Copy this to .env in the root directory

# Database Configuration
DB_HOST=mysql
DB_USER=migunani
DB_PASS=password
DB_NAME=migunani_motor_db
MYSQL_ROOT_PASSWORD=password
MYSQL_PORT=3306

# Backend
BACKEND_PORT=5000
JWT_SECRET=your_jwt_secret_key_change_in_production
DB_SCHEMA_LOCK_NAME=migunani_schema_lock
DB_SCHEMA_LOCK_TIMEOUT_SEC=30

# WhatsApp
WA_AUTO_INIT=true
WA_AUTO_RECONNECT=true
WA_PROTOCOL_TIMEOUT_MS=120000
WA_INIT_STUCK_MS=45000
WA_RECONNECT_BASE_DELAY_MS=5000
WA_RECONNECT_MAX_DELAY_MS=60000
# Optional, set if Chromium/Chrome binary is not auto-detected:
# WA_CHROME_PATH=/usr/bin/google-chrome

# Frontend
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://back_end:5000/api/v1
NEXT_PUBLIC_WS_URL=http://localhost:5000

# Inventory Import (internal endpoint gate)
IMPORT_LOCAL_PATH_ENABLED=false
# Optional comma-separated absolute directories, example:
# IMPORT_LOCAL_PATH_ALLOWLIST=/home/thouka/Migunani_Motor_Project,/mnt/c/Users/Administrator/Downloads
IMPORT_LOCAL_PATH_ALLOWLIST=
